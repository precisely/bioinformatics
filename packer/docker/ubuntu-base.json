{
  "builders": [{
    "type": "docker",
    "image": "ubuntu:18.04",
    "commit": true,
    "changes": [
      "EXPOSE 6601",
      "USER docker",
      "WORKDIR /precisely/app"
    ]
  }],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt-get update",
        "apt-get -f -y install sudo python python3"
      ]
    },
    {
      "type": "ansible",
      "playbook_file": "../ansible/ubuntu-base/playbook.yml"
    }
  ],
  "post-processors": [
    {
      "type": "docker-tag",
      "repository": "precisely/ubuntu-base",
      "tag": "latest"
    },
    {
      "type": "docker-tag",
      "repository": "precisely/ubuntu-base",
      "tag": "{{isotime \"2006-01-02T150405\"}}"
    }
  ]
}
